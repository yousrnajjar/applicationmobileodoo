<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- inherit hr_attendance.view_attendance_tree to remove editable="bottom" -->
    <record id="hr_attendance_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>
        </field>
    </record>
    <!-- inherit hr_attendance.hr_attendance_view_form to add geo location and image -->
    <record id="hr_attendance_view_form" model="ir.ui.view">
        <field name="name">hr.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
            </xpath>
            <xpath expr="//group" position="after">
                <group string="Information d'entrée">
                    <group string="Localisation lors du pointage d'entré">
                        <field name="check_in_geo_latitude"/>
                        <field name="check_in_geo_longitude"/>
                    </group>
                    <group string="Image prise lors du pointage d'entrée">
                        <field name="check_in_image" widget="image" class="oe_left oe_avatar"/>
                    </group>
                </group>
                <group string="Information de sortie">
                    <group string="Localisation lors du pointage de sortie">
                        <field name="check_out_geo_latitude"/>
                        <field name="check_out_geo_longitude"/>
                    </group>
                    <group string="Image prise lors du pointage de sortie">
                        <field name="check_out_image" widget="image" class="oe_left oe_avatar"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
    
