<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mobile_app</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Mobile App" string="Mobile App" data-key="mobile_app">
                        <h2>Attendance</h2>
                        <div class="row mt16 o_settings_container" name="mobile_attendance_setting_container">
                            <div class="col-12 o_setting_box">
                                <group>
                                    <field name="start_work_time" widget="float_time"/>
                                    <field name="end_work_time" widget="float_time"/>
                                    <field name="check_in_start_time" widget="float_time"/>
                                    <field name="check_out_start_time" widget="float_time"/>
                                    <field name="check_out_end_time" widget="float_time"/>
                                    <field name="app_check_out_forget_notification_message"/>
                                    <field name="app_check_in_auto_notification_message"/>
                                </group>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
