<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_mobile_app" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mobile_app</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="25"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block mr-4" data-string="Mobile App" string="Mobile App" data-key="mobile_app">
                        <h3>Presence</h3>

                        <group>
                            <group string="Working Hours">
                                <field name="work_start_time"/>
                                <field name="work_end_time"/>
                            </group>
                            <group string="Check In/Out Notification">
                                <field name="check_in_start_time"/>
                                <field name="check_out_start_time"/>
                                <field name="check_out_end_time"/>
                            </group>
                        </group>
                        <group>
                            <field name="app_check_out_forget_notification_message"/>
                            <field name="app_check_in_auto_notification_message"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
